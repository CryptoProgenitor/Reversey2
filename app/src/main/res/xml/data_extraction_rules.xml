<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Backup settings and game data -->
        <include domain="sharedpref" path="."/>
        <include domain="file" path="datastore/"/>
        <include domain="file" path="recordings/attempts.json"/>

        <!-- Exclude audio files to save cloud space -->
        <exclude domain="file" path="recordings/"/>
    </cloud-backup>
    <device-transfer>
        <!-- Same rules for device-to-device transfer -->
        <include domain="sharedpref" path="."/>
        <include domain="file" path="datastore/"/>
        <include domain="file" path="recordings/attempts.json"/>
        <exclude domain="file" path="recordings/"/>
    </device-transfer>
</data-extraction-rules>